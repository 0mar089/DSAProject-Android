<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@drawable/circle_with_white_border"
    android:padding="12dp">

    <!-- Todo el resto del contenido se mantiene IGUAL -->
<LinearLayout
android:id="@+id/containerLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_vertical"
android:orientation="horizontal">

<!-- Contenedor del cÃ­rculo -->
<RelativeLayout
    android:id="@+id/positionCircle"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/circle_gray">

    <TextView
        android:id="@+id/positionTxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>

<!-- Usuario y Score -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/usernameTxtRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/RecordTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 1234"
        android:textColor="#666666"
        android:textSize="16sp" />
</LinearLayout>
</LinearLayout>
    </RelativeLayout>